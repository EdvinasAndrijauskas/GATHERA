<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/add_event_fragment"
    tools:context=".ui.addPage.AddEventFragment">

    <ProgressBar
        android:id="@+id/add_event_progressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp"
        tools:ignore="MissingConstraints"
        android:visibility="gone"/>


    <EditText
        android:id="@+id/add_event_hour"
        android:layout_width="27dp"
        android:layout_height="40dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="180dp"
        android:digits="0123456789"
        android:hint="Hour"
        android:inputType="numberDecimal"
        android:singleLine="true"
        app:layout_constraintStart_toEndOf="@+id/add_event_editTextForSpinner"
        app:layout_constraintTop_toBottomOf="@+id/add_event">

    </EditText>

    <EditText
        android:id="@+id/add_event_minutes"
        android:layout_width="28dp"
        android:layout_height="40dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="40dp"
        android:digits="0123456789"
        android:hint="Min"
        android:inputType="numberDecimal"
        android:singleLine="true"
        app:layout_constraintStart_toEndOf="@+id/add_event_editTextForSpinner"
        app:layout_constraintTop_toBottomOf="@+id/add_event_hour">

    </EditText>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="60dp"
        android:text="Minutes"
        app:layout_constraintStart_toEndOf="@+id/add_event_minutes"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

    </TextView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="192dp"
        android:text="H"
        app:layout_constraintStart_toEndOf="@+id/add_event_hour"
        app:layout_constraintTop_toBottomOf="@+id/add_event">

    </TextView>

    <TextView
        android:id="@+id/add_event"
        android:layout_width="274dp"
        android:layout_height="0dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="32dp"
        android:text="Add event"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/add_event_name"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:singleLine="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_event_editTextForSpinner" />

    <EditText
        android:id="@+id/add_event_description"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Description"
        android:inputType="textPersonName"
        android:singleLine="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_event_name" />

    <EditText
        android:id="@+id/add_event_editTextForSpinner"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Select date by pressing here"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_event" />


    <Spinner
        android:id="@+id/add_event_categorySpinner"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:prompt="@string/category_prompt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_event_description" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="158dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:gravity="start"
        android:text="Number of participants:"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_event_categorySpinner">

    </TextView>

    <ImageView
        android:id="@+id/add_event_image"
        android:layout_width="151dp"
        android:layout_height="81dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="32dp"
        android:src="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/add_event_createButton"
        android:layout_width="123dp"
        android:layout_height="53dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="148dp"
        android:text="Create event"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_event_image">

    </Button>

    <EditText
        android:id="@+id/add_event_maxNumber"
        android:layout_width="61dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:digits="0123456789"
        android:ems="10"
        android:inputType="numberDecimal"
        android:singleLine="true"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/add_event_categorySpinner" />

    <Button
        android:id="@+id/add_event_selectImageButton"
        android:layout_width="88dp"
        android:layout_height="49dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="164dp"
        android:text="SELECT IMAGE"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/add_event_image"
        app:layout_constraintTop_toBottomOf="@+id/add_event_minutes">

    </Button>


</androidx.constraintlayout.widget.ConstraintLayout>